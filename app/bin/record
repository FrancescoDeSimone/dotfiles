#!/bin/bash
set -xeu
n=0
mkdir -p "$HOME/Documents/screenrecord"
FOLDER="$HOME/Documents/screenrecord"
while [[ -f $FOLDER/video$n.mkv ]]
do
	n=$((n+1))
done
filename="$FOLDER/video$n.mkv"

ffmpeg \
-f x11grab \
-s $(xdpyinfo | grep dimensions | awk '{print $2;}') \
-i :0.0 \
 -c:v libx264 -qp 0 -r 30 $filename &

echo ⏺️ > /tmp/.recordingicon && pkill -RTMIN+9 i3blocks

